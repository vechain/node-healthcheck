{
    "dependencies": {
        "axios": "^1.3.1",
        "dotenv": "^16.0.3",
        "polka": "^0.5.2",
        "prom-client": "^14.2.0"
    },
    "scripts": {
        "start": "node index.js",
        "docker": "npm run docker:clean && npm run docker:build && npm run docker:run",
